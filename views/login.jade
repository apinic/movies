doctype html
html(lang="en")
  head
    title Login
    link(rel="stylesheet", href="/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/signin.css")
  body
    div(class="container")
      for message in flash
        div(class="alert alert-#{message.type}", role="alert")
          p #{message.message}
      form(class="form-signin", role="form", action="/admin/login", method="POST")
        h2(class="form-signin-heading") Inicio de sesión
        input(type="email", name="email", class="form-control", placeholder="Correo electrónico", required, autofocus)
        input(type="password" name="password", class="form-control" placeholder="Password" required)
        button(class="btn btn-lg btn-primary btn-block", type="submit") Acceder
